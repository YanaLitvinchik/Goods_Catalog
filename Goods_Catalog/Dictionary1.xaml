<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Goods_Catalog">
    <Style x:Key="baseFont">
        <Setter Property="Control.FontFamily" Value="Trebuchet MS"/>
        <Setter Property="Control.FontStyle" Value="Italic"/>
        <Setter Property="Control.Padding" Value="5"/>        
    </Style>
    <Style x:Key="font1" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="14"/>
    </Style>
    <Style x:Key="font2" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="18"/>
    </Style>
    <Style x:Key="font3" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="28"/>
    </Style>
    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Padding" Value="20 5"/>
    </Style>
    </ResourceDictionary>